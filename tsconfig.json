{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmitOnError": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Shadcn
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // "exclude": [
  //   "/src/**/*.tsx",
  //   "/src/**/*.ts",
  //   "/src/**/*.jsx",
  //   "/src/**/*.js",
  //   "/src/**/*.d.ts",
  //   "/src/**/*.spec.ts",
  //   "/src/**/*.spec.tsx",
  //   "/src/**/*.spec.js",
  //   "/src/**/*.spec.jsx" // Exclude test files
  // ],
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
